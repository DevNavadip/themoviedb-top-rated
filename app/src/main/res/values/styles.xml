<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_000000</item>
        <item name="colorPrimaryDark">@color/color_000000</item>
        <item name="colorAccent">@color/color_000000</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textColor">@color/whiteLight</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="TextViewNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
</resources>